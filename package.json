{
  "name": "genai-test-assistant",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "GenAI helpers for QA: NL→Gherkin, JSON Schema→Test Data, Failure Triage",
  "bin": {
    "genai-test-assistant": "src/cli.ts"
  },
  "scripts": {
    "start": "tsx src/cli.ts",
    "gherkin": "tsx src/cli.ts gherkin --story examples/user-story.md --out out",
    "gherkin:claude": "tsx src/cli.ts gherkin --story examples/user-story.md --out out --provider claude",
    "gherkin:openai": "tsx src/cli.ts gherkin --story examples/user-story.md --out out --provider openai",
    "data": "tsx src/cli.ts data --schema examples/product.schema.json --n 25 --out out/data.json",
    "data:claude": "tsx src/cli.ts data --schema examples/product.schema.json --n 25 --out out/data.json --provider claude",
    "triage": "tsx src/cli.ts triage --log examples/playwright-fail.log --out out/triage.md",
    "triage:claude": "tsx src/cli.ts triage --log examples/playwright-fail.log --out out/triage.md --provider claude",
    "test": "npx playwright test out/",
    "test:api": "npx playwright test out/api/",
    "test:ui": "npx playwright test out/ui/",
    "test:discover": "node test-runner.mjs",
    "test:headed": "npx playwright test out/ui/ --headed",
    "test:debug": "npx playwright test out/ --debug",
    "build": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "ajv": "^8.17.1",
    "commander": "^12.1.0",
    "dotenv": "^17.2.2",
    "openai": "^4.58.1",
    "yaml": "^2.6.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@playwright/test": "^1.55.1",
    "@types/cucumber": "^6.0.1",
    "@types/cucumber-html-reporter": "^5.0.0",
    "@types/node": "^20.14.12",
    "cucumber-html-reporter": "^7.2.0",
    "cucumber-junit-convert": "^2.1.1",
    "multiple-cucumber-html-reporter": "^3.9.3",
    "playwright": "^1.48.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3"
  }
}
